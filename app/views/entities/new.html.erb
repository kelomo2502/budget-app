<%= render partial: "shared/transnav" , locals: {title: 'Transaction'}, class:'page-title' %>
<section class= 'form-container'>
  <h2>New Transaction</h2>
  <%= form_with model: @entity, url: user_group_entities_path, method: :post do |f| %>
    <div class="row mb-3 d-flex flex-column">
      <div class="form-group mb-3 col-sm-7">
        <%= f.text_field :name, placeholder: "Transaction name", autofocus: true, autocomplete: "name", class: "form-control" %>
      </div>

      <div class="form-group mb-3 col-sm-7">
        <%= f.number_field :amount, min: '0', step: :any, placeholder: "Transaction amount", autofocus: true, autocomplete: "amount", class: "form-control" %>
      </div>

      <div class="form-group dropdown mb-3 col-sm-7">
        <%= f.collection_select :group_id, Group.where(user_id: current_user.id).order(:name),:id,:name, {prompt:'Category'} %>
      </div>

      <div class="actions mb-3 col-sm-2">
        <%= f.submit "Add a Transaction", class: "btn btn-outline-success" %>
      </div>
    </div>
  <% end %>
</section>

