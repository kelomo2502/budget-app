<%= render partial: "shared/navbar" , locals: {title: 'Login'}, class:'page-title' %>
<section class= 'form-container'>
  <h2>Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="row mb-3 d-flex flex-column">
      <div class="form-group mb-3 col-sm-7">
        <%= f.email_field :email, placeholder: "email@gmail.com", autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>

      <div class="form-group mb-3 col-sm-7">
        <%= f.password_field :password, placeholder: "password", autocomplete: "current-password", class: "form-control" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="form-group mb-3 col-sm-7">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions mb-3 col-sm-2">
        <%= f.submit "Log in", class: "btn btn-outline-success" %>
      </div>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</section>